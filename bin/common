#!/usr/bin/env bash
SC=${SC:-$(readlink -f $0)}
THEME=$(dirname $(dirname $SC))
THEMES=$(dirname $THEME)
W=$(dirname $THEMES)
VENV_PATH=${VENV_PATH:-$W/var/venv}
if [[ "$(basename $THEMES)" != "themes" ]];then
    echo "install this in a correct theme folder layout"
    exit 1
fi
if [[ -n $DEBUG ]];then
    echo "HUGODIR: $W"
    echo "THEME: $THEME"
fi
export SC THEME THEMES W VENV_PATH
